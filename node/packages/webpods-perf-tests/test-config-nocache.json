{
  "oauth": {
    "providers": [
      {
        "id": "test-auth-provider-1",
        "clientId": "webpods-test-authn-client",
        "clientSecret": "test-secret",
        "authUrl": "http://localhost:4567/oauth2/auth",
        "tokenUrl": "http://localhost:4567/oauth2/token",
        "userinfoUrl": "http://localhost:4567/userinfo",
        "scope": "openid offline",
        "userIdField": "sub",
        "emailField": "email",
        "nameField": "name"
      }
    ],
    "defaultProvider": "test-auth-provider-1"
  },
  "server": {
    "host": "localhost",
    "port": 3000,
    "publicUrl": "http://localhost:3000",
    "corsOrigin": "*"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "webpodsdb_test",
    "user": "postgres",
    "password": "postgres"
  },
  "auth": {
    "jwtSecret": "test-secret-key",
    "jwtExpiry": "7d",
    "sessionSecret": "test-session-secret"
  },
  "rateLimits": {
    "writes": 1000000,
    "reads": 1000000,
    "podCreate": 1000000,
    "streamCreate": 1000000,
    "maxRecordLimit": 10000
  },
  "hydra": {
    "adminUrl": "http://localhost:4445",
    "publicUrl": "http://localhost:4444"
  },
  "cache": {
    "enabled": false,
    "adapter": "in-memory",
    "pools": {
      "pods": {
        "enabled": true,
        "maxEntries": 1000,
        "ttlSeconds": 300
      },
      "streams": {
        "enabled": true,
        "maxEntries": 5000,
        "ttlSeconds": 300
      },
      "singleRecords": {
        "enabled": true,
        "maxEntries": 10000,
        "maxRecordSizeBytes": 10240,
        "ttlSeconds": 60
      },
      "recordLists": {
        "enabled": true,
        "maxQueries": 500,
        "maxResultSizeBytes": 10485760,
        "maxRecordsPerQuery": 1000,
        "ttlSeconds": 30
      }
    }
  },
  "media": {
    "externalStorage": {
      "enabled": true,
      "minSize": "1kb",
      "adapter": "filesystem",
      "filesystem": {
        "basePath": ".tests/media",
        "baseUrl": "https://static.example.com"
      }
    }
  }
}
