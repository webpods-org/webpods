# WebPods Environment Variables
# Copy this file to .env and update with your values

# Most configuration is in config.json
# This file only contains secrets and runtime environment settings

# Logging
LOG_LEVEL=info

# Secrets (these should never be in config.json)
JWT_SECRET=your-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Database Password (other DB config is in config.json)
WEBPODS_DB_PASSWORD=postgres

# OAuth Provider Secrets
# Define secrets for each provider configured in config.json
# The variable name should match what's referenced in config.json
GITHUB_OAUTH_SECRET=your-github-client-secret
GOOGLE_OAUTH_SECRET=your-google-client-secret
GITLAB_OAUTH_SECRET=your-gitlab-client-secret
MICROSOFT_OAUTH_SECRET=your-microsoft-client-secret
CUSTOM_OAUTH_SECRET=your-custom-client-secret