# WebPods Environment Variables
# Copy this file to .env and update with your values

# Configuration File (optional - defaults to ./config.json)
# WEBPODS_CONFIG_PATH=/path/to/config.json

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
DOMAIN=webpods.org

# Database Configuration
WEBPODS_DB_HOST=localhost
WEBPODS_DB_PORT=5432
WEBPODS_DB_NAME=webpods
WEBPODS_DB_USER=postgres
WEBPODS_DB_PASSWORD=postgres

# Authentication Secrets (required)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=7d
SESSION_SECRET=your-session-secret-change-this-in-production

# OAuth Provider Secrets
# Define secrets for each provider configured in config.json
# The variable name should match what's referenced in config.json
GITHUB_OAUTH_SECRET=your-github-client-secret
GOOGLE_OAUTH_SECRET=your-google-client-secret
GITLAB_OAUTH_SECRET=your-gitlab-client-secret
MICROSOFT_OAUTH_SECRET=your-microsoft-client-secret
CUSTOM_OAUTH_SECRET=your-custom-client-secret

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting (per hour)
RATE_LIMIT_WRITES=1000
RATE_LIMIT_READS=10000
RATE_LIMIT_POD_CREATE=10
RATE_LIMIT_STREAM_CREATE=100

# Content Limits
MAX_CONTENT_SIZE=1048576

# Auto-migrate database on startup (Docker)
WEBPODS_AUTO_MIGRATE=false

# SSL (for production with custom domains)
LETSENCRYPT_EMAIL=admin@webpods.org
WILDCARD_SSL=true